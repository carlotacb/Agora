<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.upc.pes.agora">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permissions.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Presentation.LoginActivity"
            android:label="Agora">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Presentation.RegisterActivity"/>
        <activity android:name=".Presentation.PropuestaActivity"/>
        <activity
            android:name=".Presentation.MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Presentation.MyPropuestasActivity"
            android:label="@string/title_activity_my_propuestas"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Presentation.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Presentation.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Presentation.EditProposalActivity"
            android:label="@string/title_activity_edit_proposal"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>