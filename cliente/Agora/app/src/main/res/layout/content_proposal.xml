<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <EditText
            android:id="@+id/titulo"
            android:hint="@string/titulo"
            android:inputType="text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textColorHint="#e89b9696"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/descripcion"
            android:hint="@string/descrpicion"
            android:inputType="textMultiLine"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textColorHint="#e89b9696"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:textStyle="italic"/>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_gravity="right"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="20dp"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content">

                <Button
                    android:id="@+id/createButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botonok"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="@string/create" />

                <ProgressBar
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/crproposalprogressbar"
                    android:layout_centerInParent="true"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:indeterminateDrawable="@drawable/progress_bar_circular_style"
                    android:visibility="gone"/>

            </RelativeLayout>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/botoncancel"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="@string/reset" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPosAttached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAddPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addPosition" />

        <Button
            android:id="@+id/btnDeletePosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deletePosition"
            tools:visibility="invisible" />

    </LinearLayout>

</ScrollView>