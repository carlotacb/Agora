<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    class = "edu.upc.pes.agora.Logic.Adapters.RecyclerAdapter">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        style="@style/MyCardViewStyle2"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:id="@+id/more"
                    android:src="@mipmap/ic_more"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/linearLaytext"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categoriaproposal"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="12sp"
                    android:text="CategorÃ­a "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/textHead"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:text="Heading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:text="@string/creadoel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:id="@+id/textDescription"
                    android:text="Description: "/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_below="@+id/linearLaytext"
                          android:layout_marginTop="20dp"
                          android:id="@+id/llinformacionum"
                          android:layout_height="wrap_content">

                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp"
                              android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/numerounvote"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dislikeuser"
                        android:src="@drawable/ic_dislike_user_24"/>

                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp"
                              android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/numerovote"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/likeuser"
                        android:src="@drawable/ic_like_user_24"/>

                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp"
                              android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/numerocomentaris"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chat"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLernMore"
                android:gravity="bottom"
                android:layout_below="@+id/linearLaytext"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:text="@string/mesinfo"
                android:textSize="16dp"
                android:textColor="#3838e2"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>