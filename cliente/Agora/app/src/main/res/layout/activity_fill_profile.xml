<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#f2f1ef"
            android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backbutton"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:src="@mipmap/ic_arrow"
                android:focusable="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiidiomareg"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@mipmap/ic_language"
                android:focusable="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Completa tu perfil"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="128dp"
                      android:layout_marginBottom="15dp"
                      android:layout_marginTop="15dp">

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileimage"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/ic_user_male128"/>

                <TextView
                    android:id="@+id/buttonImage"
                    android:layout_width="128sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"
                    android:background="@color/fonssemitransparent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Change Image"/>


            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameprofile"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/username"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/barrio"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/barrio"/>
            </LinearLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:id="@+id/nombre_up"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nombrecompleto"
                android:hint="@string/nomusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:textColorHint="#e89b9696"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_margin="2sp"
                android:textCursorDrawable="@null"
                android:textColor="#000"
                android:textStyle="italic"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:id="@+id/codipostal_up"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/cpostal"
                android:hint="@string/codigopostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="number"
                android:textColorHint="#e89b9696"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_margin="2sp"
                android:textCursorDrawable="@null"
                android:textColor="#000"
                android:textStyle="italic"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:id="@+id/fechanaix_up"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fecha"
                android:hint="@string/fnaix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:textColorHint="#e89b9696"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_margin="2sp"
                android:textCursorDrawable="@null"
                android:textColor="#000"
                android:textStyle="italic"/>

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/sexo"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"/>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/CompletedReg"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/action_Registration"
                android:background="@drawable/botonlogin"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:onClick="Login"
                android:visibility="visible"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/completeprog"
                android:layout_centerInParent="true"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:indeterminateDrawable="@drawable/progress_bar_circular_style"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>