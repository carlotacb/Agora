<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@color/white"
              tools:context="edu.upc.pes.agora.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/registration"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/blue"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/identifier"
        android:hint="@string/prompt_identification"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="#e89b9696"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:background="@drawable/edittext_bg"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:textStyle="italic"/>


    <EditText
        android:hint="@string/prompt_choseUsername"
        android:id="@+id/username"
        android:inputType="textPersonName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="#e89b9696"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:background="@drawable/edittext_bg"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/password1"
        android:hint="@string/prompt_NewPassword"
        android:inputType="textPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="#e89b9696"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:background="@drawable/edittext_bg"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/password2"
        android:hint="@string/prompt_repeatPassword"
        android:inputType="textPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="#e89b9696"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:background="@drawable/edittext_bg"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/action_Registration"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/botonlogin"
        android:textColor="#000"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="17dp"
        android:onClick="Login"/>


</LinearLayout>
