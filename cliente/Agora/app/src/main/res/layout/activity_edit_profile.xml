<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f2f1ef"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/setImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_person"/>

            <TextView
                android:id="@+id/buttonImage"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="Change Image"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:id="@+id/usernameprofile"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:text="@string/username"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:text="@string/nomusuario"/>

        <EditText
            android:id="@+id/nameprofile"
            android:inputType="text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:text="@string/codigopostal"/>

        <EditText
            android:id="@+id/codipostal"
            android:inputType="text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:text="@string/barrio"/>

        <EditText
            android:id="@+id/barrio"
            android:inputType="text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@null"
            android:textColor="#000"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="5dp"
            android:text="@string/fnaix"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="serif"
            android:hint="dd-mm-yyyy"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#e89b9696"
            android:textCursorDrawable="@null"
            android:textStyle="italic" />

        <!-- <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textColor="#000"
             android:textStyle="bold"
             android:fontFamily="serif"
             android:textSize="19dp"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="2dp"
             android:text="Descripcion:"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/descript"
             android:textSize="14dp"
             android:textColor="#3419aa"
             android:layout_marginBottom="10dp"
             android:fontFamily="serif"
            /> -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:text="@string/sexo"/>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/sexo"
            android:padding="8dp"
            android:textSize="14dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cps"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:id="@+id/changePassword"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent">

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/aceptar"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botonok"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="@string/saveButton" />

                <ProgressBar
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/saveprogressbar"
                    android:layout_centerInParent="true"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:indeterminateDrawable="@drawable/progress_bar_circular_style"
                    android:visibility="gone"/>

            </RelativeLayout>


            <Button
                android:id="@+id/cancelar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/botoncancel"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="@string/cancelButton" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>