<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f2f1ef"
            android:padding="10dp"
            android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  tools:context="edu.upc.pes.agora.Presentation.LoginActivity">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginBottom="40dp"
                      android:layout_height="match_parent">

            <ImageView android:layout_width="90dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/bienvenida"
                android:textSize="30dp"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:fontFamily="serif"/>


        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:id="@+id/username_up"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/username"
                android:hint="@string/hint_username"
                android:textColorHint="#e89b9696"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:background="@drawable/edittext_bg"
                android:textCursorDrawable="@null"
                android:textColor="#000"
                android:textStyle="italic"/>

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:hint="@string/hint_password"
            android:textColorHint="#e89b9696"
            android:fontFamily="serif"
            android:textColor="#000"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_bg"
            android:textStyle="italic"/>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:background="@drawable/botonlogin"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:onClick="Login"
                android:visibility="visible"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loginprogressbar"
                android:layout_centerInParent="true"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:indeterminateDrawable="@drawable/progress_bar_circular_style"
                android:visibility="gone"/>

        </RelativeLayout>



        <LinearLayout android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pre_registre"
                android:layout_marginRight="5dp"
                android:textSize="16dp"
                android:padding="5dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegister"
                android:gravity="center_horizontal"
                android:text="@string/SignIn"
                android:textSize="16dp"
                android:textColor="#3838e2"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_weight="1"/>


    </LinearLayout>
</ScrollView>